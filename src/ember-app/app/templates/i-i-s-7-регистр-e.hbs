<h3 class="ui header">{{t "forms.i-i-s-7-регистр-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодРегистра
      class=(if (v-get validationModel "кодРегистра" "isInvalid") "error")
      label=(t "forms.i-i-s-7-регистр-e.кодРегистра-caption")
      data-test-i-i-s-7-регистр-e-кодРегистра=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодРегистра" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-7-регистр-e.наименование-caption")
      data-test-i-i-s-7-регистр-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.периодичность
      class=(if (v-get validationModel "периодичность" "isInvalid") "error")
      label=(t "forms.i-i-s-7-регистр-e.периодичность-caption")
      data-test-i-i-s-7-регистр-e-периодичность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "периодичность" "message")}}
  </div>
</form>
